@startuml
title DataInsight AI - Use Case Diagram
left to right direction
skinparam packageStyle rectangle

actor "Business User" as User
actor "Admin" as Admin
actor "Data Source\n(API/DB/File)" as Source

rectangle "DataInsight AI System" {
  usecase "Upload / Connect Data" as UC1
  usecase "Configure Monitoring Rules" as UC2
  usecase "Detect Anomalies" as UC3
  usecase "View Dashboard" as UC4
  usecase "Receive Alerts" as UC5
  usecase "Investigate Alert" as UC6
  usecase "Acknowledge / Resolve Alert" as UC7
  usecase "Manage Users & Roles" as UC8
  usecase "Export Reports" as UC9
}

User --> UC4
User --> UC6
User --> UC7
User --> UC9

Admin --> UC8
Admin --> UC2
Admin --> UC1

Source --> UC1

UC1 ..> UC3 : <<includes>>
UC2 ..> UC3 : <<includes>>
UC3 ..> UC5 : <<includes>>
UC6 ..> UC9 : <<extends>>

@enduml
